@model myMovieStore.Models.viewModel
@{
    
}
<div class="row">
    <h2 style="color:red;background-color:black;width:63%;height:40px;font-size:medium;padding-left:10px;padding-top:10px;margin-left:20px">New Released</h2>
    <div class="col-xs-12 col-md-8">
    @foreach(var m in Model.LatestMovies)
    {
        <div class="row-xs-4 col-xs-3" style="">
            <a href="watchingMovie/@m.Id" class="thumbnail">
                <img src="@m.image" alt="Image can not be diplayed">
                <div class="caption">
                    <h5><b>@m.MovieName</b></h5>
                    <h5>Watch Full Movie</h5>
                    <p>Actors:@m.Actors</p>
                </div>
            </a>
        </div>

     }
     </div>

    
    <div class="col-xs-6 col-md-4">
        <h2 style="color:red;background-color:black;width:100%;height:40px;font-size:medium;padding-left:10px;padding-top:10px;margin-top:0px">Up coming</h2>
        @foreach(var up in Model.upcoming)
        {
            <div class="col-md-6" style="">
                <a href="watchingMovie" class="thumbnail">
                    <img src="@up.image" alt="Image can not be diplayed">
                    <div class="caption">
                        <h3>@up.MovieName</h3>
                        <h5>Watch Full Movie</h5>
                        <p>Actors:@up.Actors</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
    
